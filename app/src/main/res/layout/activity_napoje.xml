<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/newcolor"
    tools:context="ng.com.obkm.bottomnavviewwithfragments.Napoje">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Do opłaty: 0 zł"
        android:textSize="23dp"
        android:layout_marginLeft="100dp"
        android:textColor="#FFFFFF"
        android:textAlignment="center"
        android:id="@+id/cena1"
        />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        android:background="#FFFFFF"
        android:layout_gravity="center_horizontal" >
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tvCC"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_height="wrap_content"
                android:text="Coca-Cola"
                android:textSize="20dp"/>

            <TextView
                android:layout_width="188dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="270dp"
                android:layout_marginTop="40dp"
                android:text="4 zł"
                android:textColor="@color/colorPrimary"
                android:textSize="20dp" />

            <ImageView
                android:layout_marginTop="10dp"
                android:layout_width="186dp"
                android:layout_height="221dp"
                android:layout_marginLeft="90dp"
                android:src="@drawable/napoje1" />

            <SeekBar
                android:id="@+id/sbCC"
                android:layout_width="218dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="230dp"
                android:layout_marginLeft="20dp"
                android:layout_weight="2" />

            <Button
                android:layout_width="74dp"
                android:layout_height="34dp"
                android:layout_marginLeft="260dp"
                android:layout_marginTop="230dp"
                android:background="@drawable/button_round"
                android:text="Add"
                android:textColor="@color/backCOLOR"
                android:id="@+id/btnCC"/>

            <TextView
                android:id="@+id/tvFa"
                android:layout_width="match_parent"
                android:layout_marginTop="270dp"
                android:layout_marginLeft="20dp"
                android:layout_height="wrap_content"
                android:text="Fanta"
                android:textSize="20dp"/>

            <TextView
                android:layout_width="188dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="270dp"
                android:layout_marginTop="300dp"
                android:text="3,50 zł"
                android:textColor="@color/colorPrimary"
                android:textSize="20dp" />

            <ImageView
                android:layout_width="200dp"
                android:layout_height="240dp"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="270dp"
                android:src="@drawable/napoje3" />

            <SeekBar
                android:id="@+id/sbFa"
                android:layout_width="218dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="490dp"
                android:layout_weight="2" />

            <Button
                android:layout_width="74dp"
                android:layout_height="34dp"
                android:layout_marginLeft="260dp"
                android:layout_marginTop="490dp"
                android:background="@drawable/button_round"
                android:textColor="@color/backCOLOR"
                android:text="Add"
                android:id="@+id/btnFa"/>

            <TextView
                android:id="@+id/tvSp"
                android:layout_width="match_parent"
                android:layout_marginTop="520dp"
                android:layout_marginLeft="20dp"
                android:layout_height="wrap_content"
                android:text="Sprite"
                android:textSize="20dp"/>

            <TextView
                android:layout_width="188dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="270dp"
                android:layout_marginTop="550dp"
                android:text="4,50 zł"
                android:textColor="@color/colorPrimary"
                android:textSize="20dp" />

            <ImageView
                android:layout_width="200dp"
                android:layout_height="240dp"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="520dp"
                android:src="@drawable/napoje2" />

            <SeekBar
                android:id="@+id/sbSp"
                android:layout_width="218dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="750dp"
                android:layout_marginLeft="20dp"
                android:layout_weight="2" />

            <Button
                android:layout_width="74dp"
                android:layout_height="34dp"
                android:layout_marginLeft="260dp"
                android:textColor="@color/backCOLOR"
                android:layout_marginTop="750dp"
                android:background="@drawable/button_round"
                android:text="Add"
                android:id="@+id/btnSp"/>

            <Button
                android:id="@+id/btnAnuluj"
                android:layout_width="150dp"
                android:layout_height="33dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="810dp"
                android:background="@drawable/button_round"
                android:text="Anuluj" />

            <Button
                android:id="@+id/btnOrder"
                android:layout_width="150dp"
                android:layout_height="33dp"
                android:layout_marginLeft="184dp"
                android:layout_marginTop="810dp"
                android:background="@drawable/button_round"
                android:text="Zapłać" />
        </FrameLayout>
    </ScrollView>
</LinearLayout>