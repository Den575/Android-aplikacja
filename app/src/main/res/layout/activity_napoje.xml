<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:orientation="vertical"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ng.com.obkm.bottomnavviewwithfragments.Zamowienie">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Do opłaty: 0 zł"
        android:textSize="23dp"
        android:layout_marginLeft="80dp"
        android:textColor="@color/colorPrimary"
        android:textAlignment="center"
        android:id="@+id/cena1"
        />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        android:layout_gravity="center_horizontal" >
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tvCC"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                android:text="Coca-Cola"
                android:textSize="20dp"/>

            <TextView
                android:layout_width="188dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="250dp"
                android:layout_marginTop="40dp"
                android:text="4 zł"
                android:textColor="@color/colorPrimary"
                android:textSize="20dp" />

            <ImageView
                android:layout_marginTop="10dp"
                android:layout_width="186dp"
                android:layout_height="221dp"
                android:layout_marginLeft="70dp"
                android:src="@drawable/napoje1" />

            <SeekBar
                android:id="@+id/sbCC"
                android:layout_width="218dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="230dp"
                android:layout_weight="2" />

            <Button
                android:layout_width="74dp"
                android:layout_height="34dp"
                android:layout_marginLeft="240dp"
                android:layout_marginTop="230dp"
                android:background="@drawable/button_round"
                android:text="Add"
                android:id="@+id/btnCC"/>

            <TextView
                android:id="@+id/tvFa"
                android:layout_width="match_parent"
                android:layout_marginTop="270dp"
                android:layout_height="wrap_content"
                android:text="Fanta"
                android:textSize="20dp"/>

            <TextView
                android:layout_width="188dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="250dp"
                android:layout_marginTop="300dp"
                android:text="3,50 zł"
                android:textColor="@color/colorPrimary"
                android:textSize="20dp" />

            <ImageView
                android:layout_width="200dp"
                android:layout_height="240dp"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="270dp"
                android:src="@drawable/napoje3" />

            <SeekBar
                android:id="@+id/sbFa"
                android:layout_width="218dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="490dp"
                android:layout_weight="2" />

            <Button
                android:layout_width="74dp"
                android:layout_height="34dp"
                android:layout_marginLeft="240dp"
                android:layout_marginTop="490dp"
                android:background="@drawable/button_round"
                android:text="Add"
                android:id="@+id/btnFa"/>

            <TextView
                android:id="@+id/tvSp"
                android:layout_width="match_parent"
                android:layout_marginTop="520dp"
                android:layout_height="wrap_content"
                android:text="Sprite"
                android:textSize="20dp"/>

            <TextView
                android:layout_width="188dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="250dp"
                android:layout_marginTop="550dp"
                android:text="4,50 zł"
                android:textColor="@color/colorPrimary"
                android:textSize="20dp" />

            <ImageView
                android:layout_width="200dp"
                android:layout_height="240dp"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="520dp"
                android:src="@drawable/napoje2" />

            <SeekBar
                android:id="@+id/sbSp"
                android:layout_width="218dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="750dp"
                android:layout_weight="2" />

            <Button
                android:layout_width="74dp"
                android:layout_height="34dp"
                android:layout_marginLeft="240dp"
                android:layout_marginTop="750dp"
                android:background="@drawable/button_round"
                android:text="Add"
                android:id="@+id/btnSp"/>

            <Button
                android:id="@+id/btnAnuluj"
                android:layout_width="123dp"
                android:layout_height="33dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="810dp"
                android:background="@drawable/button_round"
                android:text="Anuluj" />

            <Button
                android:id="@+id/btnOrder"
                android:layout_width="123dp"
                android:layout_height="33dp"
                android:layout_marginLeft="170dp"
                android:layout_marginTop="810dp"
                android:background="@drawable/button_round"
                android:text="Zapłać" />
        </FrameLayout>
    </ScrollView>
</LinearLayout>